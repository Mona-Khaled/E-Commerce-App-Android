<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Search">


    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="317dp"

        android:layout_height="wrap_content"
        android:layout_margin="40dp"

        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/button_speak"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_90sdp"
        android:background="#FF9800"
        android:textColor="@android:color/white"
        android:text="Speak" />

    <Button
        android:id="@+id/search_barcode_id"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_190sdp"
        android:background="#D5CBBC"
        android:textColor="@android:color/white"
        android:text="Scan BarCode" />


    <Spinner
        android:id="@+id/sppiner_id_search"
        android:layout_width="347dp"
        android:layout_height="93dp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_250sdp" />
    <ListView
        android:id="@+id/list_pro_2_id"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/cate_search"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:layout_marginVertical="@dimen/_330sdp"/>


</FrameLayout>